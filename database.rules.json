{
  "rules": {
    "posts": {
      ".read": "true",
      ".write": "auth != null",
      "$postKey": {
        ".read": "true",
        ".write": "(!data.exists() && auth != null) || data.child(auth.uid).exists()",
        "likes": {
          ".read": "true",
          ".write": "auth != null"
        },
        "likeCount": {
          ".read": "true",
          ".write": "auth != null"
        }
      }
    },
    "post-comments": {
      ".read": "true",
      ".write": "auth != null"
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    }
  }
}
