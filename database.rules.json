{
  "rules": {
    "posts": {
      ".read": "true",
      "$postKey": {
        ".read": "true",
        ".write": "auth != null && (!data.exists() || data.child('uid').val() === auth.uid) && newData.hasChild('uid')",
        "likes": {
          ".read": "true",
          ".write": "auth != null"
        },
        "likeCount": {
          ".read": "true",
          ".write": "auth != null"
        }
      }
    },
    "post-comments": {
      ".read": "true",
      ".write": "auth != null"
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    }
  }
}
